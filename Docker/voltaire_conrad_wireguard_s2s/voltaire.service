[Unit]
Description=Add static route for Voltaire Wireguard tunnel - add to conrad wg host
After=docker.service
Requires=docker.service

[Service]
Type=simple
ExecStartPre=/bin/bash -c 'until [ "$(docker inspect -f {{.State.Running}} wireguard 2>/dev/null)" = "true" ]; do sleep 1; done'
ExecStart=/sbin/ip route add 10.0.10.0/24 via 172.20.0.2
ExecStart=/sbin/ip route add 10.50.70.0/27 via 172.20.0.2
ExecStart=/sbin/ip route add 10.50.25.0/24 via 172.20.0.2
RemainAfterExit=yes
Restart=always

[Install]
WantedBy=multi-user.target